{
  "expo": {
    "name": "CestApp",
    "slug": "CestApp",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/cestapp-logo.png",
    "scheme": "cestapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jbgsoft.CestApp",
      "infoPlist": {
        "NSCameraUsageDescription": "CestApp needs access to your camera to capture receipt photos.",
        "NSPhotoLibraryUsageDescription": "CestApp needs access to your photos to select receipt images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.jbgsoft.CestApp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/cestapp-logo.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/cestapp-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFDE1",
          "dark": {
            "backgroundColor": "#1A1918",
            "image": "./assets/images/cestapp-logo.png"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "CestApp needs access to your camera to capture receipt photos.",
          "photosPermission": "CestApp needs access to your photos to select receipt images."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-sqlite",
      "expo-localization",
      [
        "rn-mlkit-ocr",
        {
          "ocrModels": ["latin"]
        }
      ],
      "@react-native-community/datetimepicker",
      [
        "react-native-document-scanner-plugin",
        {
          "cameraPermission": "CestApp needs access to your camera to scan receipts."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
